<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/chatConversationcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/responseBackground"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chatConversationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="6dp"
                android:text="Title"
                android:background="@color/promptBackground"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title">
            </TextView>
            <TextView
                android:id="@+id/chatConversationSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:clickable="true"
                android:padding="6dp"
                android:layout_below="@id/chatConversationTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Small">
            </TextView>
            <TextView
                android:id="@+id/chatConversationDateModified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DateModified"
                android:clickable="true"
                android:padding="6dp"
                android:layout_below="@id/chatConversationSummary"
                android:textAppearance="@style/TextAppearance.AppCompat.Small">
            </TextView>
            <TextView
                android:id="@+id/chatConversationID"
                android:visibility="gone"
                android:layout_width="0pt"
                android:layout_height="0pt"
                >
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>